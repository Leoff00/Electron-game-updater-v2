{
	"compilerOptions": {
		"strict": true,
		"target": "ES2017",
		"lib": ["ES2017", "DOM.Iterable", "DOM"],
		"module": "CommonJS",
		"rootDir": "./src",
		"typeRoots": ["./node_modules/@types"],
		"resolveJsonModule": true,
		"allowJs": true,
		"outDir": "./dist",
		"removeComments": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "."
	},

	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
